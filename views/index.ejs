<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Form Handling</title>
</head>
<body>
    <div class="main bg-zinc-800 min-h-screen w-full">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="w-full bg-zinc-600 my-4 mx-2 outline-none px-3 py-3 rounded-lg" type="text" placeholder="Title Goes Here" name="title">
                <textarea class="w-full bg-zinc-600 my-4 mx-2 outline-none px-3 py-3 rounded-lg resize-none" placeholder="Description about title goes here" name="detail"></textarea>
                <!-- Changed placeholder to value in submit button -->
                <input type="submit" class="bg-blue-500 rounded-md px-5 py-3" value="Create Task">
            </form>
        </div>

        <div class="tasks mt-10 p-10 flex gap-3 flex-wrap">
            <% if(files && files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task w-72 bg-zinc-600 rounded-lg flex-grow">
                        <h1 class="py-5 px-3 text-3xl text-white tracking-tighter"><%= val %></h1>
                        <!-- Corrected text-blue to text-blue-500 -->
                       <div class="flex w-full justify-between">
                        <a href="/file/<%= val %>" class=" text-xl text-blue-500 tracking-tighter px-3">Read More</a>
                        <a href="/edit/<%=val%>" class="text-zinc-300 px-3">Rename</a>
                       </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h1 class="p-10">No Task Added Yet</h1>
            <% } %>   
        </div>
    </div>
</body>
</html>
